# =============================================================================
# AI Self-Querying Retriever - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control

# --- OpenAI Configuration ---
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# --- LangSmith Configuration ---
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=self-querying-retriever
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# --- LangFuse Configuration ---
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=http://langfuse:3085
LANGFUSE_ENABLED=true

# --- PostgreSQL Configuration ---
POSTGRES_DB=sqr_db
POSTGRES_USER=sqr_user
POSTGRES_PASSWORD=sqr_secure_password_change_me
POSTGRES_HOST=postgres
POSTGRES_PORT=5483

# --- Redis Configuration ---
REDIS_URL=redis://redis:6383/0
REDIS_HOST=redis
REDIS_PORT=6383

# --- ChromaDB Configuration ---
CHROMA_HOST=chromadb
CHROMA_PORT=8583

# --- Django Configuration ---
DJANGO_SECRET_KEY=your-django-secret-key-change-me-in-production
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=*
DJANGO_CORS_ALLOWED_ORIGINS=http://172.168.1.95:3083,http://localhost:3083

# --- API Gateway Configuration ---
API_GATEWAY_PORT=3084
DJANGO_BACKEND_URL=http://backend:8083
MCP_SERVER_URL=http://mcp-server:3086

# --- Frontend Configuration ---
REACT_APP_API_URL=http://172.168.1.95:3084
REACT_APP_WS_URL=ws://172.168.1.95:3084

# --- MCP Server Configuration ---
MCP_SERVER_PORT=3086

# --- Celery Configuration ---
CELERY_BROKER_URL=redis://redis:6383/1
CELERY_RESULT_BACKEND=redis://redis:6383/2

# --- LangFuse Server (self-hosted) ---
LANGFUSE_DATABASE_URL=postgresql://sqr_user:sqr_secure_password_change_me@postgres:5483/langfuse_db
LANGFUSE_NEXTAUTH_SECRET=langfuse-nextauth-secret-change-me
LANGFUSE_NEXTAUTH_URL=http://172.168.1.95:3085
LANGFUSE_SALT=langfuse-salt-change-me
LANGFUSE_TELEMETRY_ENABLED=false
